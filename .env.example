# Time-Shift Radio Stream - Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# Server Configuration
# =============================================================================

# Port to run the server on (default: 3000)
PORT=3000

# Environment mode: development, production, test
NODE_ENV=development

# =============================================================================
# Security Configuration
# =============================================================================

# API key for admin endpoints (e.g., /api/restart)
# In production, this MUST be set - admin endpoints will be disabled without it
# Generate a secure key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_API_KEY=

# CORS allowed origins (comma-separated)
# In production, set this to your allowed domains
# Leave empty to deny all cross-origin requests in production
# Examples:
#   CORS_ORIGINS=https://example.com
#   CORS_ORIGINS=https://app1.example.com,https://app2.example.com
CORS_ORIGINS=

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: error, warn, info, debug (default: info)
LOG_LEVEL=info

# =============================================================================
# Storage Configuration
# =============================================================================

# Directory for storing segment data (default: ./data)
STORAGE_DIR=./data

# Maximum buffer size in MB (default: 10240 = 10GB)
# MAX_BUFFER_SIZE_MB=10240

# =============================================================================
# Pipeline Configuration
# =============================================================================

# Interval for monitoring the source stream in milliseconds (default: 5000)
MONITOR_INTERVAL=5000

# Maximum number of retries for failed operations (default: 3)
MAX_RETRIES=3

# Maximum concurrent downloads (default: 3)
MAX_CONCURRENT_DOWNLOADS=3

# Health check interval in milliseconds (default: 60000 = 1 minute)
HEALTH_CHECK_INTERVAL=60000

# Graceful shutdown timeout in milliseconds (default: 10000 = 10 seconds)
SHUTDOWN_TIMEOUT=10000

# =============================================================================
# Testing Configuration
# =============================================================================

# Duration for system tests in milliseconds (default: 60000 = 1 minute)
TEST_DURATION=60000
